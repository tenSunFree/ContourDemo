<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/color_FFFF8800"/>
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/color_FFCCCCCC"/>
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/color_FFFF6600"/>
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>
</selector>